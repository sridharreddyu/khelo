<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="KheloDBSessionFactory">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">mysql</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/khelodb</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <mapping class="com.i2i.khelo.model.User"/>
  <mapping class="com.i2i.khelo.model.SportsCategory"/>
 </session-factory>
</hibernate-configuration>
